.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}

.userinfo-avatar[size] {
  width: 100rpx;
}


.userinfo-avatar:after {
  border: none;
}


.logo image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  will-change: transform, opacity;
}

.user_name image {
  margin-left: 16rpx;
  width: 84rpx;
  height: 31rpx;
}

.userinfo-nickname{
  margin-left: 5rpx;
  display: flex;
  align-items: center;
  font-size: 36rpx;
  font-weight: bold;
  color: black;
}

.nav {
  margin-top: 10px;
  font-size: 34rpx;
  background: rgba(255,255,255,0.7);
  width: 94%;
}

.nav .item {
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #e5e5e5;
  padding: 28rpx 0;
}

